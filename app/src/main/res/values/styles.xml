<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/MyToolbar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppWelcome" parent="AppTheme">
        <item name="android:windowBackground">@drawable/welcome</item>
    </style>

    <style name="ActivityStyle" parent="AppTheme">
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="MyToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
    </style>


    <style name="SearchBarStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/search_bar_shape</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/qb_px_28</item>
        <item name="android:paddingLeft">@dimen/qb_px_15</item>
        <item name="android:layout_marginLeft">@dimen/qb_px_15</item>
        <item name="android:layout_marginRight">@dimen/qb_px_60</item>
    </style>

    <style name="SearchEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">number</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/qb_px_14</item>
        <item name="android:layout_marginLeft">@dimen/qb_px_10</item>
    </style>

    <style name="CarInfoStyle">
        <item name="android:textSize">@dimen/qb_px_12</item>
        <item name="android:textColor">#666666</item>
        <item name="android:layout_marginLeft">@dimen/qb_px_129</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CarInfoTitleStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/qb_px_11</item>
        <item name="android:textColor">#FF4B4949</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>



    <style name="CarInfoImgeStyle">
        <item name="android:layout_marginLeft">@dimen/qb_px_101</item>
        <item name="android:layout_width">@dimen/qb_px_1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/divideLine</item>
    </style>


    <style name="BKInfoTitleStyle">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/qb_px_12</item>
        <item name="android:textColor">#FF4B4949</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BKInfoStyle">

        <item name="android:text">请选择</item>
        <item name="android:textSize">@dimen/qb_px_12</item>
        <item name="android:textColor">#FF666666</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BKInfoImgeStyle">

        <item name="android:layout_marginLeft">@dimen/qb_px_10</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/arrow_right</item>
    </style>

    <style name="mainButtonStyle">
        <item name="android:textSize">@dimen/qb_px_12</item>
        <item name="android:textColor">@color/login_top</item>
        <item name="android:drawablePadding">@dimen/qb_px_8</item>
        <item name="android:background">@drawable/btu_shape</item>
        <item name="android:drawableLeft">@mipmap/maintain</item>
        <item name="android:layout_width">@dimen/qb_px_86</item>
        <item name="android:layout_height">@dimen/qb_px_29</item>
    </style>

    <style name="OpsAdjustTabStyle">
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/tab_opera_adjust_color_selector</item>
        <item name="android:textSize">@dimen/qb_px_15</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/qb_px_122</item>
        <item name="android:layout_height">@dimen/qb_px_31</item>
    </style>

</resources>
