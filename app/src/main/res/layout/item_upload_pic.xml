<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:frceo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="@dimen/qb_px_104"
    android:layout_height="@dimen/qb_px_104">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sd_upload_install_pic_item"
        android:background="@drawable/add_pic_shape"
        android:layout_width="@dimen/qb_px_104"
        android:layout_height="@dimen/qb_px_104"
        frceo:placeholderImage="@mipmap/add_pic_icon"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/ib_cancel_upload_item"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/cancel_icon" />

</FrameLayout>